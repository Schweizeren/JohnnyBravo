    <image>
        <Image url="@whiteArrow.png">
            </Image>
            </image>
            </ImageView>
            <ImageView fx:id="volumeView" fitHeight="25.0" fitWidth="30.0" layoutX="565.0" layoutY="647.0" styleClass="button-sliders">
                <image>
                    <Image url="@soundWhite.png">
                    </Image>
                </image>
            </ImageView>
      <Button fx:id="btnNewPlaylist" layoutX="28.0" layoutY="659.0" mnemonicParsing="false" onAction="#createPlaylist" prefHeight="31.0" prefWidth="69.0" stylesheets="@MyTunes.css" text="New..." />
      <Button fx:id="btnEditPlaylist" layoutX="103.0" layoutY="659.0" mnemonicParsing="false" onAction="#editPlaylist" prefHeight="31.0" prefWidth="63.0" stylesheets="@MyTunes.css" text="Edit..." />
      <Button fx:id="btnDeletePlaylist" layoutX="201.0" layoutY="659.0" mnemonicParsing="false" onAction="#deletePlaylist" stylesheets="@MyTunes.css" text="Delete" />
