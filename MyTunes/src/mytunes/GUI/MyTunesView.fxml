        <columns>
          <TableColumn fx:id="cellSongPlaylistTitle" editable="false" prefWidth="195.0" sortable="false" text="Title" />
        </columns>
      </TableView>
      <TableView fx:id="tablePlaylist" layoutX="28.0" layoutY="104.0" onMousePressed="#tablePlaylistClicked" prefHeight="539.0" prefWidth="244.0">
        <columns>
          <TableColumn fx:id="cellPlaylistTitle" editable="false" prefWidth="231.0" sortable="false" text="Title" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
